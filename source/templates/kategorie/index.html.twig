{% extends 'base.html.twig' %}

{% block title %}Kategorie index{% endblock %}

{% block body %}
    <h1>Kategorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazev</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kategorie in kategories %}
            <tr>
                <td>{{ kategorie.id }}</td>
                <td>{{ kategorie.Nazev }}</td>
                <td>
                    <a href="{{ path('kategorie_show', {'id': kategorie.id}) }}">show</a>
                    <a href="{{ path('kategorie_edit', {'id': kategorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('kategorie_new') }}">Create new</a>
{% endblock %}
